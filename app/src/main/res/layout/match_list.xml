<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardView"
        app:cardCornerRadius="8dp"
        android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:padding="8dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:layout_centerHorizontal="true"
                android:id="@+id/title" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="8dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/title"
                android:id="@+id/date"
                app:layout_constraintTop_toBottomOf="@+id/title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp"/>
        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_trophy"
                android:layout_below="@id/date"
                android:id="@+id/home_badge"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/home_score" android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/home_score"
                app:layout_constraintTop_toTopOf="@+id/home_score"/>

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/ic_trophy"
                android:layout_below="@id/date"
                android:id="@+id/away_badge"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/away_score"
                app:layout_constraintBottom_toBottomOf="@+id/away_score"
                app:layout_constraintTop_toTopOf="@+id/away_score"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"
                android:id="@+id/textView"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date" app:layout_constraintVertical_bias="0.39"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/home_score"
                android:text="-"
                app:layout_constraintEnd_toStartOf="@+id/textView"
                android:layout_marginEnd="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintBottom_toBottomOf="@+id/textView"/>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:id="@+id/away_score"
                android:text="-"
                app:layout_constraintStart_toEndOf="@+id/textView"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="@+id/textView"
                app:layout_constraintBottom_toBottomOf="@+id/textView"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home Team"
                android:id="@+id/home_name"
                app:layout_constraintStart_toStartOf="@+id/home_badge"
                app:layout_constraintEnd_toEndOf="@+id/home_badge"
                app:layout_constraintTop_toBottomOf="@+id/home_badge" android:layout_marginTop="4dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Away Team"
                android:id="@+id/away_name"
                app:layout_constraintStart_toStartOf="@+id/away_badge"
                app:layout_constraintEnd_toEndOf="@+id/away_badge"
                app:layout_constraintTop_toBottomOf="@+id/away_badge" android:layout_marginTop="4dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
